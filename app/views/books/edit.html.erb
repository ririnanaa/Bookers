<body>

<h1>Editing Book</h1>
<%= form_with model: @book, url: update_bookers_path(@book.id), method: :patch do |f| %>

 <% if @book.errors.any? %>
  <p>error</p>
  <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
  </ul>
 <% end %>

<p class=edit-box-field>Title</p>
<p class=edit-box><%= f.text_field :title %></p>

<p>Body</p>
<p class=edit-box><%= f.text_field :body %></p>

<p class=edit-box>
<%=f.submit 'Update Book' %>
</p>

<% end %>

<%= link_to "Show", bookers_path(@book.id) %>

 |

<%= link_to "Back", "/books" %>

</body>