<body>
<h1>Books</h1>

<table>
 <thead>    
 <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
 </tr>
 </thead>
 
<% @books.each do |book| %>
 
 <tbody>
 <tr>
   <td><%= book.title %></td>
   <td><%= book.body %></td> 
   <td><%= link_to "Show", bookers_path(book.id) %></td>
   <td><%= link_to "Edit", edit_bookers_path(book.id) %></td>
   <td><%= link_to "Destroy", destroy_bookers_path(book.id), method: :delete, "data-confirm"=>"Are you sure?" %></td>
  <% end %>
 </tr>
 </tbody>

</table>



<h2>New book</h2>
  <% if @book.errors.any? %>
 <p>error</p>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @book,url:"/books",method: :post do |f| %>
<div class=field>Title</div>
<%= f.text_field :title %>

<div class=field>Body</div>
<%= f.text_area :body %>

<div class=botton>
<%= f.submit 'Create Book' %>
</div>
<% end %>
</body>